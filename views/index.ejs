                <%while (x < (max-rl3)){%>
                  <li>
                    
                  </li>
                <%x++%>
                <%}%>
            </ul>
          </div>
          <% } %>
      </div>
    </div>

    <div class="row description flex flex-row flex-jc-c">
      <div class="col">
        <% if(recipeData1 !==null && recipeData1 != undefined){ %>
          <div class="card">
            <h4 class="card-title"> Description </h4>
            <p class="card-text">
              <%- recipeData1.description %>
            </p>
            <div class="card-footer">
              <small><a href="<%- recipeData1.url %>">Link to Original</a></small>
            </div>
          </div>
