<body>

  <header class="header">
    <div class="overlay has-fade"></div>
    <nav class="flex flex-jc-sb flex-ai-c container">
      <a href="/" class="header__logo">
        <p>The Recipe Comparator</p>
        <!-- <img src="images/logo.png" alt="Logo Image"> -->
      </a>

      <div class="header__links flex flex-jc-sb flex-ai-c">
        <a href="#">Home</a>
        <a href="#">About</a>
      </div>
    </nav>
  </header>


  <div class="flex flex-jc-c flex-ai-c">
    <div class="wrap">
      <div class="search">
        <form action="/" method="post">
          <input name="searchQuery" type="text" class="searchTerm" placeholder="What's cooking?" required>
          <button type="submit" class="searchButton">
        </form>
        <i class="fa fa-search"></i>
        </button>
      </div>
    </div>
  </div>

  <div class="hints">
    <p id="search-hint"><i class="fa-solid fa-circle-info"></i>Not getting many results? Try adding the word "recipe" to the end of your query.</p>
    <p id="search-hint"><i class="fa-solid fa-circle-info"></i>Click and drag to rearrange the indredient lists for side-by-side comparison.</p>
  </div>

    <% var rl1; var rl2; var rl3; %>
    <% if(recipeData1 !==null && recipeData1 != undefined){rl1=recipeData1.recipeIngredient.length;} %>
    <% if(recipeData2 !==null && recipeData2 != undefined){rl2=recipeData2.recipeIngredient.length;} %>
    <% if(recipeData3 !==null && recipeData3 != undefined){rl3=recipeData3.recipeIngredient.length;} %>
    <% var max = Math.max(rl1, rl2, rl3); %>



  <div class="container">
    <div class="row title-cards flex flex-row flex-jc-c">
      <div class="col card">
        <% if(recipeData1==null || recipeData1 == undefined){ %>
          <p class="card-text"> No properly formatted recipe detected. </p>
          <% } %>
            <% if(recipeData1 !==null && recipeData1 != undefined){ %>
              <div class="card-body">
                <h4 class="card-title"><a href="<%- recipeData1.url %>">
                    <%- recipeData1.name %>
                  </a></h5>
                  <ul>
                    <li><b>Prep Time:</b>
                      <%- recipeData1.prepTime %>
                    </li>
                    <li><b>Cook Time:</b>
                      <%- recipeData1.cookTime %>
                    </li>
                    <li><b>Total Time:</b>
                      <%- recipeData1.totalTime %>
                    </li>
                    <li><b>Yield:</b>
                      <%- recipeData1.recipeYield %>
                    </li>
                  </ul>
              </div>
              <% } %>
      </div>


      <div class="col card">
        <% if(recipeData2==null || recipeData2 == undefined){ %>
          <p class="card-text"> No properly formatted recipe detected. </p>
